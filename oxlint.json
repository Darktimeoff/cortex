{
  "$schema": "https://oxc-project.github.io/oxc/configuration/schema.json",
  "files": {
    "include": ["src/**/*.ts"],
    "exclude": ["**/*.test.ts", "node_modules", "dist"]
  },
  "rules": {
    "style/no-mixed-spaces-and-tabs": "error",
    "suspicious/no-empty-interface": "warn",
    "suspicious/no-explicit-any": "warn",
    "style/consistent-return": "warn",
    "style/no-unused-vars": "warn",
    "suspicious/no-debugger": "error",
    "suspicious/no-duplicate-case": "error",
    "suspicious/no-duplicate-imports": "error"
  }
} 